<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>

    <data>
        <import type="android.view.View"/>
        <variable name="data" type="pl.tapo24.twa.dbData.entity.Company"/>
        <variable name="viewModel" type="pl.tapo24.twa.ui.helpers.company.CompanyViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            style="@style/smallContainer"
            android:background="@drawable/style_small_container"
            android:layout_height="wrap_content" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">


        <TextView
                android:text="@{viewModel.getSpanText2(data.name)}"
                style="@style/textStyleOrangeSmallWarp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/name" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@{viewModel.getSpanText(`Nip: ` + data.nipNumber)}"
                style="@style/textStyleWhiteSmallInContainerCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nipNumber"
                app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@{viewModel.getSpanText(`REGON: ` + data.regonNumber)}"
                style="@style/textStyleWhiteSmallInContainerCenter"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/regonNumber"
                app:layout_constraintTop_toBottomOf="@+id/nipNumber" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@{viewModel.getSpanText(`Adres: ` + data.adress)}"
                style="@style/textStyleWhiteSmallInContainerCenter"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/adres"
                app:layout_constraintTop_toBottomOf="@+id/regonNumber" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>