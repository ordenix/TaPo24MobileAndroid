<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="?attr/tapoMainColor"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:padding="5dp">
    <TextView
            android:text="@string/about_tariff_search"
            android:layout_width="wrap_content"
            style="@style/textStyleOrangeMediumWarp"
            android:layout_height="wrap_content" android:id="@+id/textView48"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/textView48"
            app:layout_constraintBottom_toTopOf="@+id/button9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/tariff_help_search"
                    android:layout_width="match_parent"

                    style="@style/textStyleWhiteSmallInContainer"
                    android:layout_height="wrap_content" android:id="@+id/textView76"/>
            <TextView
                    android:text="@string/tariff_help_code"
                    android:layout_width="match_parent"
                    style="@style/textStyleWhiteSmallInContainer"

                    android:layout_height="wrap_content" android:id="@+id/textView74"/>
            <TextView
                    android:text="@string/tariff_help_two_type"
                    android:layout_width="match_parent"
                    style="@style/textStyleWhiteSmallInContainer"

                    android:layout_height="wrap_content" android:id="@+id/textView67"/>
            <TextView
                    android:text="@string/tariff_help_online"
                    android:layout_width="match_parent"
                    style="@style/textStyleWhiteSmallInContainer"

                    android:layout_height="wrap_content" android:id="@+id/textView71"/>
            <TextView
                    android:text="@string/tariff_help_offline"
                    android:layout_width="match_parent"
                    style="@style/textStyleWhiteSmallInContainer"

                    android:layout_height="wrap_content" android:id="@+id/textView72"/>
            <TextView
                    android:text="@string/tariff_help_warning"
                    android:layout_width="match_parent"
                    style="@style/textStyleWhiteSmallInContainer"

                    android:layout_height="wrap_content" android:id="@+id/textView77"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Zamknij"
            android:theme="@style/OrangeBtn"
            android:backgroundTint="?attr/buttonBackground"
            android:layout_height="35dp"
            app:iconSize="10dp"
            android:textSize="10dp"
            app:icon="@drawable/undo_bold"

            android:layout_width="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>