<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/second_tapo"
                                                   android:layout_height="match_parent" android:paddingStart="20dp"
                                                   android:paddingEnd="20dp" android:paddingTop="0dp"
                                                   android:paddingBottom="20dp">
    <TextView
            android:text="@string/viewLoading"
            android:layout_width="wrap_content"
            style="@style/textStyleOrangeMediumWarp"
            android:layout_height="wrap_content" android:id="@+id/textView57"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/pleaseWait"
            style="@style/textStyleOrangeMediumWarp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView58"
            app:layout_constraintTop_toBottomOf="@+id/textView57" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/orange_tapo"
            android:indeterminate="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView58"/>
</androidx.constraintlayout.widget.ConstraintLayout>