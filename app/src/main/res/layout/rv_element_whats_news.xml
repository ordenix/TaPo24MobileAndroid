<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/style_social_media_button"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginTop="5dp"
                                                   android:layout_marginBottom="5dp" android:layout_marginRight="10dp"
                                                   android:layout_marginLeft="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:text="@string/app_name_long"
                android:layout_width="match_parent"
                style="@style/textStyleLarge"
                android:textColor="?attr/textMainColor"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAppName" android:visibility="visible"/>
        <TextView
                android:text="2023-04-14"
                style="@style/textStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDate" android:visibility="visible"/>
        <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/webView" android:visibility="visible"/>
        <TextView
                android:text="Co nowego?"
                style="@style/textStyleLarge"
                android:textAlignment="center"
                android:maxLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTitle" android:visibility="gone"/>
        <TextView
                android:text="p1"
                style="@style/textStyle"
                android:maxLines="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewP1" android:visibility="gone"/>
        <TextView
                android:text="p2"
                style="@style/textStyle"
                android:maxLines="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewP2" android:visibility="gone"/>
        <TextView
                android:text="p3"
                style="@style/textStyle"
                android:maxLines="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewP3" android:visibility="gone"/>
        <TextView
                android:text="p4"
                style="@style/textStyle"
                android:maxLines="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewP4" android:visibility="gone"/>
        <TextView
                android:text="lorem"
                style="@style/textStyleLarge"
                android:maxLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewFooterBold" android:visibility="gone"/>
        <TextView
                android:text="lorem"
                style="@style/textStyle"
                android:maxLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewFooter" android:visibility="gone"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp" app:srcCompat="@drawable/flask_vial_solid"
                android:id="@+id/imageView17" android:tint="#FFFFFF" android:visibility="gone"/>
        <TextView
                android:text="Damian"
                style="@style/textStyle"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2Author" android:visibility="visible"/>
        <TextView
                android:text="1.0"
                android:textSize="10sp"
                android:textAlignment="textEnd"
                style="@style/textStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewVersion" android:visibility="visible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>