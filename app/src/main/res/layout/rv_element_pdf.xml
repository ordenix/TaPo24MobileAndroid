<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <import type="android.view.View"/>
        <variable name="data"
                  type="pl.tapo24.twa.dbData.entity.Law"/>
        <variable name="fileStatus" type="java.lang.String"/>
        <variable name="viewModel" type="pl.tapo24.twa.ui.settings.pdf.PdfListViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            style="@style/smallContainer"
            android:background="@drawable/style_small_container"
            android:layout_height="wrap_content"

    >

        <TextView
                android:text="@{data.name}"
                style="@style/textStyleWhiteSmallInContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView121"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView122"
                android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/checkBox" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@{fileStatus}"
                style="@style/textStyleWhiteVerySmallInContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView122"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
                android:text="@{`Rozimiar: ` + data.size}"
                style="@style/textStyleWhiteVerySmallInContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView123"
                app:layout_constraintStart_toEndOf="@+id/textView122"
                app:layout_constraintTop_toTopOf="@+id/textView122"
                app:layout_constraintBottom_toBottomOf="@+id/textView122" android:layout_marginStart="8dp"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:onClick="@{() -> viewModel.changeSelectedStatus(data)}"
                android:enabled="@{data.isOptional == true}"
                style="@style/textStyleWhiteCode"
                android:layout_height="wrap_content" android:id="@+id/checkBox"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>