<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="?attr/tapoMainColor"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            style="@style/textStyleLarge"
            android:textColor="?attr/textMainColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titleSurvey"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            style="@style/textStyleWhiteInContainerCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/typeSurvey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/titleSurvey"/>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rv"
            app:layout_constraintBottom_toTopOf="@+id/rejectSurvey" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/typeSurvey"/>
    <Button
            style="@style/Widget.App.Button.Orange"

            android:text="@string/rejectSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rejectSurvey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sendSurvey"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            style="@style/Widget.App.Button.Orange"

            android:text="@string/sendSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sendSurvey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rejectSurvey"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>