<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.helpers.adrTable.AdrTableFragment">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/style_orange_adr_table"
                    android:layout_height="200dp">
                <View style="@style/Divider"
                      android:background="@color/black"
                      android:id="@+id/view18"
                      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                      android:layout_width="0dp" android:layout_height="10dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"/>
                <EditText
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/hinNumber" app:layout_constraintBottom_toTopOf="@+id/view18"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
                        android:hint="000"/>
                <EditText
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/adrNumber"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:textAlignment="center" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view18"
                        android:hint="0000"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/style_small_container"
                    style="@style/smallContainer"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@string/enterHIN"
                        style="@style/textStyleWhiteSmallInContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textHinNumber"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:text="@string/enterADR"
                        style="@style/textStyleWhiteSmallInContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textAdrNumber"
                        app:layout_constraintTop_toBottomOf="@+id/textHinNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>