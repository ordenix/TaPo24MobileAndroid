<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="pl.tapo24.twa.R" />
        <variable name="viewModel"
                  type="pl.tapo24.twa.ui.admin.survey.progress.SurveyProgressViewModel"/>

    </data>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                style="@style/smallContainer"
                android:background="@drawable/style_small_container"
                android:layout_height="match_parent">


            <TextView
                android:text="@{viewModel.survey.name}"
                    style="@style/textStyleOrangeMediumWarpXl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/question"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            />

            <TextView
                    android:text="@{viewModel.survey.singleChoice== true ? `Typ: Jednokrotnego wyboru` : `Typ: Wielokrotnego wyboru`}"
                    style="@style/textStyleWhiteInContainerCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/question"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="Target: Dla wszsytkch"
                    style="@style/textStyleWhiteInContainerCenter"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/target"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/type" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="Lista odpowiedźi"
                    style="@style/textStyleWhiteInContainerCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView115"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/target"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/textView115"
                    android:id="@+id/recyclerView" android:maxHeight="150dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:text="total"
                    style="@style/textStyleWhiteInContainerCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/totalUser"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView"/>
            <TextView
                    android:text="REJECTED"
                    style="@style/textStyleWhiteInContainerCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/userRejected"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/totalUser"/>
            <TextView
                    android:text="Data publikacji ankiety"
                    style="@style/textStyleWhiteInContainerCenter"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView117"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userRejected"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateStartTIL"
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data początkowa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView117">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:id="@+id/dateStartTIET"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateEndTIL"
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data końcowa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateStartTIL">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:id="@+id/dateEndTIET"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                    android:text="Status ankiety: AKTYWNA"
                    style="@style/textStyleWhiteInContainerCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/status"
                    app:layout_constraintTop_toBottomOf="@+id/dateEndTIL" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                    android:text="Zmień status"
                    android:theme="@style/OrangeBtn"
                    android:backgroundTint="?attr/buttonBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/changeStatus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/status"/>
            <Button
                    android:text="USUŃ"
                    android:theme="@style/OrangeBtn"
                    android:backgroundTint="?attr/buttonBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/publish"
                    app:layout_constraintTop_toBottomOf="@+id/changeStatus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>