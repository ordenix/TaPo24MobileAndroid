<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/second_tapo"
                                                   android:layout_height="match_parent" android:paddingTop="2dp"
                                                   android:paddingEnd="2dp" android:paddingStart="2dp"
                                                   android:paddingBottom="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout7">

        <TextView
                style="@style/textStyleWhiteCode"

                android:text="Szczegóły wykroczenia"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/textView59"
                android:textAlignment="center" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                style="@style/textStyleWhiteCode"

                android:text="Kategoria: Postój/Zatrzymanie/Cofanie/Zawracanie/Holowanie"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView61"
                app:layout_constraintTop_toBottomOf="@+id/textView59"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout6" android:layout_marginEnd="32dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/constraintLayout6">

            <ImageView
                    style="@style/iconTariff"
                    app:srcCompat="@drawable/star_regular"
                    android:id="@+id/imageView14" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Dodaj do ulubionych"
                    style="@style/textStyleWhiteCode"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView60"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView14"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@drawable/style_orange_container"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:id="@+id/view12"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sv2" app:layout_constraintTop_toBottomOf="@+id/view12"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent" android:maxHeight="500dp">
        <TextView
                style="@style/textStyleOrangeMediumWarp"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:text="Dui tractatos graeci dolore elaboraret duo eloquentiam dicat. Fabulas libris delenit orci equidem nam tempor nobis ante. Scelerisque epicurei maiestatis postulant voluptaria parturient. Offendit prompta non ad vituperata veri. Rutrum mandamus curabitur scripta dico congue molestiae definiebas fringilla mentitum. Epicurei verterem auctor primis deterruisset theophrastus ut. Quod dictumst maximus elitr sapien non. Tation mucius porta adolescens vero alienum verear."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView66"
        />
    </ScrollView>
    <TextView
            android:text="Ultricies iaculis ornare mnesarchum ullamcorper veritus viverra graece nibh nominavi."
            android:textIsSelectable="true"
            style="@style/textStyleWhiteCode"
            android:textAlignment="center"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/textVievText"
            app:layout_constraintTop_toBottomOf="@+id/sv2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" android:layout_marginEnd="3dp" app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/style_orange_container"
            android:id="@+id/view11"
            app:layout_constraintTop_toBottomOf="@+id/textVievText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:visibility="visible"/>
    <TextView
            android:text="Kwalifikacja prawna:"
            style="@style/textStyleWhiteCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView68"
            app:layout_constraintTop_toBottomOf="@+id/view11" android:visibility="visible"
            tools:layout_editor_absoluteX="2dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout8"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/button6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:visibility="visible">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                            style="@style/iconTariff"
                            app:srcCompat="@drawable/money_bill_wave_solid"
                            android:id="@+id/imageView4333"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" android:visibility="visible"/>
                    <TextView
                            style="@style/textStyleWhiteCode"

                            android:text="2000 zł"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView62"
                            app:layout_constraintStart_toEndOf="@+id/imageView4333"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"
                            android:layout_marginStart="4dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:background="#FF0000"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/imageView4333"
                            app:layout_constraintTop_toBottomOf="@+id/textView62"
                            android:layout_marginStart="4dp" android:visibility="visible" android:id="@+id/recidive">
                        <ImageView
                                style="@style/iconTariff"
                                app:srcCompat="@drawable/repeat_solid"
                                android:id="@+id/imageView732"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                                style="@style/textStyleWhiteCode"

                                android:text="3000 zł"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView63"
                                app:layout_constraintStart_toEndOf="@+id/imageView732"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="4dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/codeContainer"
                    android:layout_height="wrap_content" android:layout_weight="1" android:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible"
                        android:id="@+id/codeContainerw">
                    <TextView
                            android:text="H 09 "
                            style="@style/textStyleWhiteCode"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView65"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView7323333"
                            app:layout_constraintTop_toBottomOf="@+id/textView64"/>
                    <ImageView
                            style="@style/iconTariff"
                            app:srcCompat="@drawable/person_military_pointing_solid"
                            android:id="@+id/imageView7323"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                            android:text="10 pkt"
                            style="@style/textStyleWhiteCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView64"
                            app:layout_constraintStart_toEndOf="@+id/imageView7323"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                            style="@style/iconTariff"
                            app:srcCompat="@drawable/book_solid"
                            android:id="@+id/imageView7323333"
                            app:layout_constraintTop_toBottomOf="@+id/textView64"
                            app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollView2" app:layout_constraintTop_toBottomOf="@+id/textView68"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout8" android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent">
        <TextView
                style="@style/textStyleWhiteCode"
                android:maxLines="5000"
                android:textIsSelectable="true"
                android:textSize="12sp"
                android:text="Deserunt elementum cras posse dapibus ornare mandamus. Sadipscing platea regione mattis interdum option propriae quisque. Animal sadipscing hinc praesent iisque. Quam equidem sed erroribus necessitatibus viderer et netus percipit. Suavitate maecenas brute nam id. Sollicitudin partiendo oratio tempor tota per magna. Efficiantur pulvinar error tamquam quisque homero fringilla ponderum. Harum vivendo interdum maximus habeo splendide dictum inceptos varius per. Petentium verear rhoncus ocurreret principes nascetur. Ligula graeci maximus instructior mattis phasellus condimentum verear duis debet. Aenean faucibus doming definitiones dolorem persecuti mei ante quod tota. Percipit cubilia sem inani eripuit affert consectetuer aliquid leo euismod. Ridiculus conclusionemque repudiandae civibus nisl vis verterem decore definitionem. Lorem definiebas suscipit falli sea. Volutpat cras mandamus potenti senserit molestiae vel appareat velit. Legimus has epicurei quam intellegat dui feugait evertitur neglegentur. Nostra sadipscing dico egestas netus mus noluisse varius omittantur id. Cum dictumst malorum definitionem necessitatibus sea suscipiantur vocent. Mazim consetetur reformidans populo prompta ex ad vix natoque docendi. Persequeris autem appareat suscipit similique. Eos porro ridens mi mazim appareat inceptos. Option harum agam luptatum offendit vocibus pericula civibus. Qui pretium expetenda mea nam mauris veritus simul laoreet. Definiebas sapientem taciti mentitum civibus postulant iudicabit doctus. Ac perpetua dolorum venenatis nostra id quidam vocibus nulla."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/lawContent" android:visibility="visible"/>
    </ScrollView>
    <Button
            android:text="Zamknij"
            android:theme="@style/OrangeBtn"
            android:backgroundTint="@color/orange_tapo"
            android:layout_height="35dp"
            app:iconSize="10dp"
            android:textSize="10dp"
            app:icon="@drawable/undo_bold"

            android:layout_width="wrap_content"
            android:id="@+id/button6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>