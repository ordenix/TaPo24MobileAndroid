<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>

    <data>
        <import type="android.view.View"/>
        <variable name="position"
                  type="java.lang.Integer"/>
        <variable name="visibleNotifyForTariffIcon"
                  type="java.lang.Boolean"/>
        <variable name="data" type="pl.tapo24.twa.dbData.entity.NoiseLevel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            style="@style/smallContainer"
            android:background="@drawable/style_small_container"
            android:layout_height="wrap_content" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">


        <TextView
                android:text="@{data.vechicle}"
                style="@style/textStyleOrangeMediumWarp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vechicleType"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/style_separator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/vechicleType"
                android:layout_marginTop="8dp" android:layout_marginEnd="10dp"/>

        <TextView
                android:text="@string/dieselEngine"
                style="@style/textStyleWhiteSmallInContainerCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/dieselEngineText"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/imageView34"
                app:layout_constraintBottom_toBottomOf="@+id/imageView34"/>
        <TextView
                android:text="@{data.dieselEngine == null ? `Nie dotyczy`: data.dieselEngine}"
                style="@style/textStyleOrangeSmallWarpCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/dieselEngineNoise"
                app:layout_constraintTop_toTopOf="@+id/dieselEngineText"
                app:layout_constraintBottom_toBottomOf="@+id/dieselEngineText"
                app:layout_constraintStart_toEndOf="@+id/dieselEngineText"
                app:layout_constraintEnd_toStartOf="@+id/imageView34"/>
        <TextView
                android:text="@string/gasolineEngine"
                style="@style/textStyleWhiteSmallInContainerCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/gasolineEngineText"
                app:layout_constraintTop_toBottomOf="@+id/divider5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@{data.gasolineEngine == null ? `Nie dotyczy`: data.gasolineEngine}"
                style="@style/textStyleOrangeSmallWarpCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gasolineEngineNoise"
                app:layout_constraintTop_toTopOf="@+id/gasolineEngineText"
                app:layout_constraintBottom_toBottomOf="@+id/gasolineEngineText"
                app:layout_constraintStart_toEndOf="@+id/dieselEngineText"
                app:layout_constraintEnd_toStartOf="@+id/imageView33"/>
        <ImageView
                android:src="@drawable/gas"
                style="@style/iconTariff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView33"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/gasolineEngineText"
                app:layout_constraintBottom_toBottomOf="@+id/gasolineEngineText" android:layout_marginEnd="10dp"/>
        <ImageView
                style="@style/iconTariff"
                android:src="@drawable/oil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView34"
                app:layout_constraintTop_toBottomOf="@+id/imageView33" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" android:layout_marginEnd="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>