<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="itimTextViewStyle">
        <item name="android:fontFamily">@font/itim</item>
    </style>
    <style name="textStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/itim</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="blackSmallText" parent="@style/textStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>

    </style>
    <style name="gridText">
        <item name="android:fontFamily">@font/itim</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textStyleOrangeMediumWarp" parent="@style/textStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/orange_tapo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">50</item>
    </style>
    <style name="textStyleOrangeMediumWarpXl" parent="@style/textStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/orange_tapo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">50</item>
    </style>
    <style name="textStyleCategoryDrivingLicence" parent="@style/textStyle">
        <item name="android:textSize">50sp</item>

        <item name="android:maxLines">1</item>
    </style>
    <style name="textStyleWhiteSmallInContainer" parent="@style/textStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">10</item>
    </style>
    <style name="remarksKsipStatus" parent="@style/textStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange_tapo</item>

        <item name="android:maxLines">10</item>
    </style>
    <style name="textStyleDrivingLicenceCountry" parent="@style/textStyle">
        <item name="android:textSize">15sp</item>

        <item name="android:maxLines">20</item>
    </style>
    <style name="textStyleWhiteQualification" parent="@style/textStyle">
        <item name="android:textSize">12sp</item>

        <item name="android:maxLines">2</item>
    </style>
    <style name="textStyleWhiteCode" parent="@style/textStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="textStyleLarge" parent="@style/textStyle">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="textAboutApplicationLeftCol" parent="@style/textStyle">
        <item name="android:textAlignment">textEnd</item>
    </style>
    <style name="textAboutApplicationRightCol" parent="@style/textStyle">
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/orange_tapo</item>
    </style>
    <style name="OrangeBtn">
        <item name="background">@color/orange_tapo</item>

    </style>
    <style name="iconTariff">
        <item name="tint">@color/white</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>

    </style>
    <style name="gridElement">
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="smallContainer">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>



    <style name="Theme.App" parent="Theme.Material3.Light">
        ...
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/orange_tapo</item>
        <item name="colorOutline">@color/white</item>
        <item name="colorOnSurface">@color/orange_tapo</item>
        <item name="startIconTint">@color/white</item>
        <item name="colorError">@color/orange_tapo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/itim</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Material3.BodySmall</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>

</resources>